{% extends "RodgermdSfToolsBundle:Form:bootstrap2_horizontal.html.twig" %}

{% block form_row %}
  {% spaceless %}
    <div class="form-group">
      {% if 'checkbox' in form.vars.block_prefixes %}
        {{ block('form_row_checkbox') }}
      {% else %}
        {{ form_label(form) }}
        <div class="col-sm-10">
          {{ form_errors(form) }}
          {{ form_widget(form, { attr: { class: 'form-control' } }) }}
        </div>
      {% endif %}
    </div>
  {% endspaceless %}
{% endblock form_row %}

{% block form_row_checkbox %}
  <div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
      <label for="{{ form.vars.id }}">
        {{ form_widget(form) }} {{ form.vars.label | trans({}, translation_domain) }}
      </label>
    </div>
  </div>
{% endblock form_row_checkbox %}


{% block form_label %}
  {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' col-sm-2')|trim}) %}
  {{ parent() }}
{% endblock form_label %}


