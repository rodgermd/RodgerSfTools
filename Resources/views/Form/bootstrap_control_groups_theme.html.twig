{% extends "form_div_layout.html.twig" %}

{% block form_row %}
  {% spaceless %}
    <div class="control-group">
      {{ form_label(form) }}
      <div class="controls">
        {{ form_widget(form) }}
        {{ form_errors(form) }}
      </div>
    </div>
  {% endspaceless %}
{% endblock form_row %}

{% block form_label %}
  {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}
  {{ parent() }}
{% endblock form_label %}